   "source": [
    "import sympy as sym\n",
    "\n",
    "x, x_0, x_1, epsilon = sym.symbols('x x_0 x_1 epsilon')\n",
    "p = (x - 1) * (x + 1) * (x - epsilon)\n",
    "print(sym.poly(p))\n",
    "pert = p.subs(x, x_0 + epsilon * x_1)\n",
    "print(sym.collect(sym.expand(pert.series(epsilon, 0, 2)), epsilon))\n",
    "\n"
   ]
  }
